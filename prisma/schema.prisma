generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int  @id @default(autoincrement())
  fullname String
  email String
  password String
  workspace Workspace[]
  document Document[]
}

model Workspace {
  id Int @id @default(autoincrement())
  name String
  workspaceAuthor User @relation(fields: [workspaceAuthorId], references: [id])
  workspaceAuthorId Int
  documents Document[]
}

model Document {
  id Int @id @default(autoincrement())
  name String
  content String
  documentAuthor User @relation(fields: [documentAuthorId], references: [id])
  workspace Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  documentAuthorId Int
} 